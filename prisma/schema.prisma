generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Employee {
  id             Int       @id @default(autoincrement())
  firstName      String
  lastName       String
  telephone      String
  email          String   @unique
  password       String   
  role           Int
  managerId      Int?
  status         Boolean
  departments    Department[] @relation("EmployeeDepartments")
}

model Department {
  id             Int       @id @default(autoincrement())
  name           String
  status         String
  employees      Employee[]  @relation("EmployeeDepartments")

}
